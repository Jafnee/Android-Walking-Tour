<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlayer"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityLogin" >

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BtnRegister"
        android:layout_alignBottom="@+id/BtnRegister"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/BtnRegister"
        android:onClick="btnLoginClicked"
        android:text="login"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BtnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/loginProgress"
        android:onClick="btnRegisterClicked"
        android:text="register"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/txtbxPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginProgress"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:background="@drawable/textfield_background"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textSize="11pt"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/txtbxUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtbxPassword"
        android:layout_alignLeft="@+id/txtbxPassword"
        android:layout_marginBottom="41dp"
        android:background="@drawable/textfield_background"
        android:ems="10"
        android:hint="Username"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textSize="11pt"
        android:typeface="sans"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/loginProgress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp" />

</RelativeLayout>